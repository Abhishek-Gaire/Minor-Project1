<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="public/css/vehicles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500&display=swap" rel="stylesheet">
    <title>Webpage</title>
   
</head>
<body >
  <div class="title">
    <h1>Vehicles</h1>
  </div>
   <div class="container">
    <div class="nav">
      <ul>
        <li>Crossovers & SUVs</li>
        <li>Cars</li>
        <li>Hybrid</li>
        <li>Electric</li>
        <li>Sports Cars</li>
      </ul>
    </div>
      <% if (vehiclesData) { %>
            <div class="models">
              <% vehiclesData.forEach(function(vehicle) { %>
                <a href="/modelview?<%=vehicle._id%>" class="model">
                  <img src="<%= vehicle.imageUrl %>" alt="Image From Database">
                  <h2><%= vehicle.name %></h2>
                  <h2><%= vehicle.price %></h2>
                </a>
              <% }); %>
      
      <% } else { %>
        <p>No images found in the Database</p>
      <%} %>
    </div>
    
  </div>
</body>
</html>