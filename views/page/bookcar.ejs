<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirm Book Car</title>
    <link rel="icon" type="image/x-icon" href="/assets/logo-removebg-preview.png">
    <link rel="stylesheet" href="../../public/css/bookCar.css">
   
</head>
<body>
    <div class="overlay"></div>
    <a href="/" id="logo"><img src="/assets/logo-removebg-preview.png" alt="Go to Home Page"></a>
    <div class="container">
        <div class="content">
            <h1>Is this information about your car correct?</h1> 
            
            <% if(vehicleData) { %>
                <h2>Name: <%= vehicleData.name %></h2>
                <img src="<%= vehicleData.imageUrl %>" alt="Image From Database">
                <h2>Price <%= vehicleData.price %></h2>
                <p>Description :<%= vehicleData.description %></p>
                <button id="enablePopup">Confirm</button>
            <%} %>
        </div>
        
        <div class="alert-form">
            <form action="/confirmBookCar" method="post">
                <input type="hidden" name="vehicleId" value="vehicleData._id">
                <label for="FirstName">First Name:</label>
                <input type="text" name="firstName" id="FirstName" required>
                <label for="LastName">Last Name:</label>
                <input type="text" name="lastName" id="LastName" required>
                <label for="email">Email:</label>
                <input type="email" name="email" uneditable>
                <label for="Address">Address:</label>
                <input type="text" name="address" id="Address" placeholder="Street Number and Street Name" required>
                <label for="contactNumber">Contact Number:</label>
                <input type="number" name="phoneNumber" id="contactNumber" required> 
                <button type="submit">Confirm Your Booking</button>
            </form>
        </div>
    </div>
    <script>
        document.querySelector("#enablePopup").addEventListener("click",function(){
            console.log("This is clicked");
            const status = document.querySelector(".alert-form");
            const overlay = document.querySelector(".overlay");
            if(status.style.visibility === "hidden"|| status.style.visibility === "" ){
                status.style.visibility = "visible";
                overlay.style.display = "block";
            }else{
                status.style.visibility = "hidden";
                overlay.style.display = "none";


            }
        })
        document.querySelector(".overlay").addEventListener("click",function(){
            const status = document.querySelector(".alert-form");
            const overlay = document.querySelector(".overlay");
            if(overlay){
                status.style.visibility = "hidden";
                overlay.style.display = "none";
            }
        })
        
    </script>
</body>
</html>