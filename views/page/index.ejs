<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DYD</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/locomotive-scroll@3.5.4/dist/locomotive-scroll.css">
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="icon" type="image/x-icon" href="/assets/logo-removebg-preview.png">
</head>

<body >
  <div class="loader">
    <div class="yellow1"></div>
    <div class="yellow2"></div>
    <video autoplay loop muted src="https://works.studio/uploads/images/home/4_version1_200911_024106.mp4"></video>
    <h1 id="text">
      <em>UNCOVER</em><em> the </em>CAR <em> of your<br>
      </em>DREAMS <em>from </em>an<br>
      ARRAY <em>of </em> <br>
      CHOICES <em>available </em>HERE.
    </h1>
  </div>

  <div class="nav">
    <div class="navl">
      <a href="/" id="logo"><img src="/assets/logo-removebg-preview.png" alt=""></a>
    </div>
    <div class="navr">
      <a href="/vehicles" id="moveall"><h3>View Models</h3></a>
      <a id="move" href="/about"><h3>About</h3></a>
      <a id="move" href="/contact"><h3>Contact</h3></a>
      <div id='circle' ><i class="fa-solid fa-plus"></i></div>
    </div>
  </div>
      
  <div class="main" >
    <div class="page1" data-scroll data-scroll-speed="-3">
      <h1 id="text"><em>UNCOVER</em><em> the </em>CAR <em> of your<br>
        </em>DREAMS <em>from </em>an<br>
        ARRAY <em>of </em> <br>
        CHOICES <em>available </em>HERE.
      </h1>
      <div class="signup">
        <% if(isLoggedIn) { %>
          <form action="/logout" method="POST">
            <button type="submit">Sign Out</button>
          </form>
        <%} else{ %>
          <a href="/signup" id="page1btn">Sign Up</a>
        <% } %>
      </div>
    </div>

    <div class="page2" data-scroll data-scroll-speed="2">
      <h1 class="head">Our Top Selling</h1>
      <div class="models">
        <% models.forEach(function(model){ %>
          <div class="car">
            <div class="content">
              <h1> <%=model.name%></h1>
              <p> <%=model.descriptionOfCar%></p>
              <div class="btn">
                <a href="/modelview?<%= model._id %>"><button>Explore More</button></a>
              </div>
            </div>
            <img src="<%= model.imageUrl %>" alt="Image From Database">
          </div>
        <% })  %>
      </div>
                  
    </div>
    <footer>
      <div class="contact">
        <div class="contactup">
          <div class="left">DYD</div>
          <div class="right">
            <div class="cl">
              <p>Contact</p>
              <a href="#">Whatsapp</a>
              <a href="#">Email</a>
            </div>
            <div class="cl">
              <p>Services</p>
              <a href="#">Vehicles</a>
            </div>
            <div class="cl social">
              <p>Socials</p>
              <div>
                <div id="point">
                  <i class="fa-brands fa-x-twitter"></i>
                </div>
                <div id="point">
                  <i class="fa-brands fa-linkedin-in"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
                
        <div class="contactdown">
          <div class="bottomleft">
            <p id="msg">Send an email T_T</p>
            <p id="email">minorproject_I@gmail.com</p>
          </div>
          <div class="bottomright">
            <div class="up"></div>
            <div>@ Drive Your Dream 2024</div>
          </div>              
        </div>
      </div>
    </footer>
  </div>


    <script src="https://kit.fontawesome.com/fd6ad446c7.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/locomotive-scroll@3.5.4/dist/locomotive-scroll.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="public/js/script.js"></script>
</body>

</html>