    <script src="https://kit.fontawesome.com/fd6ad446c7.js" crossorigin="anonymous"></script>
    <script>
        document.getElementById("dropdown").addEventListener("click", ()=>{
            const dropdown = document.querySelector(".dropdown-content")
            if(dropdown.style.display === "none"){
                console.log("inside if")
                dropdown.style.display = "block";
            } else {
                dropdown.style.display = "none";
            }
        })
        const all = document.querySelector('.all')
        const pending = document.querySelector('.pending')
        const approve = document.querySelector('.approve')
        const cancel = document.querySelector('.cancel')
        document.querySelector('#pending').addEventListener('click',()=>{
            all.style.visibility = 'hidden'
            pending.style.visibility = 'visible'
            approve.style.visibility = 'hidden'
            cancel.style.visibility = 'hidden'
        })
        document.querySelector('#approve').addEventListener('click',()=>{
            all.style.visibility = 'hidden'
            pending.style.visibility = 'hidden'
            approve.style.visibility = 'visible'
            cancel.style.visibility = 'hidden'
        })
        document.querySelector('#cancel').addEventListener('click',()=>{
            all.style.visibility = 'hidden'
            pending.style.visibility = 'hidden'
            approve.style.visibility = 'hidden'
            cancel.style.visibility = 'visible'
        })
        document.querySelector('#all').addEventListener('click',()=>{
            all.style.visibility = 'visible'
            pending.style.visibility = 'hidden'
            approve.style.visibility = 'hidden'
            cancel.style.visibility = 'hidden'
        })






// Function to toggle the dropdown menu
function toggleDropdown() {
    var dropdownContent = document.getElementById("statusDropdown");
    dropdownContent.classList.toggle("show");
}

// Function to update selected status and display it on the HTML container
function filterStatus(status) {
    var statusText = getStatusText(status); // Get the text corresponding to the status
    var statusContainer = document.getElementById("statusValue");

    if (statusContainer) {
        statusContainer.textContent = statusText; // Update the content of the status container
        console.log("Selected status: " + statusText);
    } else {
        console.error("Status container element not found.");
    }
}

// Function to get status text based on status key
function getStatusText(status) {
    switch (status) {
        case 'all':
            return 'All';
        case 'pending':
            return 'Pending';
        case 'approve':
            return 'Approve';
        case 'cancel':
            return 'Cancel';
        default:
            return 'Unknown';
    }
}



    </script>
