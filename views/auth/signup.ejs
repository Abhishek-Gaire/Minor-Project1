<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="public/css/signup.css">
    <link rel="icon" type="image/x-icon" href="/assets/logo-removebg-preview.png">

</head>

<body>
    <a href="/"><img src="assets/logo-removebg-preview.png" alt=""></a>
    <div class="container flex">

        <div class="login flex">
            <% if(errorMessage) { %>
                <p>
                    <%= errorMessage %>
                </p>
                <% } %>
                    <form action="/signup" method="POST">
                        <h1>Signup</h1>

                        <div class="data flex">
                            <input type="text" placeholder="Username">
                            <i class="fa-solid fa-user"></i>
                        </div>
                        <div class="data flex">
                            <input type="email" placeholder="Email">
                            <i class="fa-solid fa-envelope"></i>
                        </div>
                        <div class="data flex eye">
                            <input type="password" placeholder="Password">
                            <i class="fa-solid fa-eye-slash"></i>
                        </div>

                        <button type="submit">Signup</button>
                    </form>
                    <p>Already have an account? <a href="/login">Login</a></p>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/fd6ad446c7.js" crossorigin="anonymous"></script>
    <script>
        let eye = document.querySelector('.eye')
        let eyei = document.querySelector('.eye i')
        let istrue = true
        eyei.addEventListener('click', () => {
                if (istrue) {
                eye.innerHTML = `<input type="password" placeholder="Password">
                <i class="fa-solid fa-eye"></i>`
                istrue = false
                console.log(istrue)
            }else if(!istrue){
                eye.innerHTML = `<input type="password" placeholder="Password">
                <i class="fa-solid fa-eye-slash"></i>`
                istrue = true
                console.log(istrue)
            }
            })
        console.log(istrue)
