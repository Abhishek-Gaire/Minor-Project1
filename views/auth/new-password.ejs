<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link rel="stylesheet" href="/public/css/new-password.css">
    <link rel="icon" type="image/x-icon" href="/assets/logo-removebg-preview.png">

</head>
<body>
    <div class="container flex">
        <div class="login flex">
            <h1>Reset your Password</h1>
            <% if(errorMessage) {%>
                <p style="color: red"><%= errorMessage %></p>
            <% } %>
            <form action="/update-password" method="POST">
                <div class="data flex">
                    <input type="password" placeholder="New Password" name="newPassword"  required>
                    <i class="fa-solid fa-eye-slash" onclick="togglePasswordVisibility(newPassword)"></i>
                </div>
                <div class="data flex">
                    <input type="password" placeholder="Re-enter Password" name="confirmPassword" required>
                    <i class="fa-solid fa-eye-slash" onclick="togglePasswordVisibility(newPassword)"></i>
                </div>
                <input type="hidden" name="resetToken" value="<%= token %>">
                <button type="submit">Update Password</button>
            </form>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/fd6ad446c7.js" crossorigin="anonymous"></script>
    <script>
        function togglePasswordVisibility(inputName) {
            const inputField = document.querySelector(`input[name="${inputName}"]`);
            const eyeIcon = document.getElementById(`toggle${inputName}`);

            if (inputField.type === 'password') {
                inputField.type = 'text';
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
            } else {
                inputField.type = 'password';
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
            }
        }
    </script>
</body>
</html>
